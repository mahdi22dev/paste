generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  username  String
  password  String
  createdAt DateTime? @default(now())
  posts     Paste[]

  @@index([email])
}

enum Mode {
  PUBLIC
  PRIVATE
  PASSWORD
}

model Paste {
  id         Int       @id @default(autoincrement())
  title      String
  content    String?
  createdAt  DateTime? @default(now())
  experation String?
  mode       Mode
  password   String?
  author     User?     @relation(fields: [authorId], references: [id])
  authorId   Int?
}
